<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.orderlinkpos.ui.LoginController" styleClass="login-root">
    <children>
        <VBox spacing="10" layoutX="100" layoutY="80" alignment="CENTER" prefWidth="320">
            <Label text="CAPDOCS - Iniciar sesión" styleClass="login-title" />
            <TextField fx:id="userField" promptText="Usuario" />
            <PasswordField fx:id="passField" promptText="Contraseña" />
            <Label fx:id="errorLabel" textFill="#ff6b6b" />
            <Button fx:id="loginButton" text="Entrar" onAction="#onLogin" styleClass="btn-primary" />
        </VBox>
    </children>
</AnchorPane>
